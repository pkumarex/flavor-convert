            "meta": {
                "tpm_version": "2.0",
                "cbnt_enabled": true
            },
            "pcr_rules": [
                {
                    "pcr": {
                        "index": 7,
                        "bank": "SHA256"
                    },
                    "pcr_matches": true
                }
            ]
        }
    }
}