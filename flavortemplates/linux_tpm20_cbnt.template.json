{
    "label": "linux-tpm20-cbnt",
    "condition": [
		"//host_info/vendor//*[text()='Linux']",
        "//host_info/tpm_version//*[text()='2.0']",
        "//host_info/hardware_features/cbnt/enabled//*[text()='true']"
    ],
    "flavor_parts": {
